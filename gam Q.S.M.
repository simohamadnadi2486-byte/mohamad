import time

# Dur√©e du test : 1h30 = 5400 secondes
duree = 5400
debut = time.time()

score = 0

print("üéÆ Jeu QCM : Formation du sol üå±")
print("‚è±Ô∏è Dur√©e : 1 heure et 30 minutes")
print("üìä Notation sur 20")
print("---------------------------------------")

questions = [
    ("Comment appelle-t-on la formation du sol ?",
     ["A) √ârosion", "B) P√©dogen√®se", "C) S√©dimentation"], "B"),

    ("Quel facteur n‚Äôinfluence PAS la formation du sol ?",
     ["A) Climat", "B) Temps", "C) T√©l√©vision"], "C"),

    ("Quel horizon contient la liti√®re ?",
     ["A) Horizon O", "B) Horizon A", "C) Horizon B"], "A"),

    ("Quel horizon est riche en humus ?",
     ["A) Horizon C", "B) Horizon A", "C) Horizon B"], "B"),

    ("O√π s‚Äôaccumulent les sels min√©raux ?",
     ["A) Horizon O", "B) Horizon A", "C) Horizon B"], "C"),

    ("Quelle texture du sol retient le plus d‚Äôeau ?",
     ["A) Sable", "B) Argile", "C) Gravier"], "B"),

    ("Quelle eau est disponible pour les plantes ?",
     ["A) Eau de gravit√©", "B) Eau capillaire", "C) Eau hygroscopique"], "B"),

    ("Quel est le r√¥le des micro-organismes du sol ?",
     ["A) D√©composer la mati√®re organique",
      "B) D√©truire le sol",
      "C) S√©cher le sol"], "A"),

    ("Quel animal am√©liore la structure du sol ?",
     ["A) Ver de terre", "B) Serpent", "C) Oiseau"], "A"),

    ("Quelle activit√© humaine d√©grade le sol ?",
     ["A) Reboisement", "B) Surp√¢turage", "C) Protection du sol"], "B"),
]

for i, q in enumerate(questions, 1):
    temps_ecoule = time.time() - debut
    temps_restant = duree - temps_ecoule

    if temps_restant <= 0:
        print("\n‚è∞ Temps √©coul√© !")
        break

    print(f"\nQuestion {i}")
    print(q[0])
    for choix in q[1]:
        print(choix)

    reponse = input("Votre r√©ponse : ").upper()

    if reponse == q[2]:
        print("‚úî Bonne r√©ponse")
        score += 1
    else:
        print("‚úò Mauvaise r√©ponse")

    minutes = int(temps_restant // 60)
    secondes = int(temps_restant % 60)
    print(f"‚è≥ Temps restant : {minutes} min {secondes} s")

# Calcul de la note sur 20
total_questions = len(questions)
note = (score / total_questions) * 20

print("\n--------------------------------")
print("üìä R√©sultat final")
print(f"‚úî Bonnes r√©ponses : {score} / {total_questions}")
print(f"üéì Note finale : {note:.2f} / 20")

if note >= 16:
    print("üèÜ Excellent !")
elif note >= 10:
    print("üôÇ Niveau satisfaisant")
else:
    print("üìò Niveau insuffisant, r√©visez la le√ßon")
